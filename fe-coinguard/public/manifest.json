{
  "name": "CoinGuard Extension",
  "version": "1.0.0",
  "description": "Maintain complete privacy while harnessing the benefits of cryptos frictionless transactions and custody.",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Wallet"
  },
  "background": {
    "service_worker": "src/background.js",
    "persistent": false,
    "type": "module"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "activeTab"
  ]
}